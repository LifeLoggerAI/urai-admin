{ pkgs, ... }:
{
  packages = [
    pkgs.git
    pkgs.bashInteractive
    pkgs.nodejs_20
    pkgs.corepack
  ];

  env = {
    CI = "1";
    COREPACK_ENABLE_DOWNLOAD_PROMPT = "0";
    PNPM_HOME = "$HOME/.local/share/pnpm";
    PATH = "$PNPM_HOME:$PATH";
    STARSHIP_LOG = "error";
    TMPDIR = "$HOME/.tmp";
  };
}
