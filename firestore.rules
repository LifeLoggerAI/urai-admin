
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAppAdmin() {
      return get(/databases/$(database)/documents/adminUsers/$(request.auth.uid)).data.role in ['owner', 'admin'];
    }

    function isAppOwner() {
      return get(/databases/$(database)/documents/adminUsers/$(request.auth.uid)).data.role == 'owner';
    }

    function isAppViewer() {
       return get(/databases/$(database)/documents/adminUsers/$(request.auth.uid)).data.role in ['owner', 'admin', 'viewer'];
    }

    match /adminUsers/{uid} {
      allow read: if isAppViewer();
      allow write: if isAppOwner();
    }

    match /auditLogs/{logId} {
      allow read: if isAppAdmin();
      allow create: if false; // Server-side only
      allow update: if false;
      allow delete: if false;
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
