rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/adminUsers/$(request.auth.uid)).data.isActive == true;
    }

    match /{document=**} {
      allow read, write: if false;
    }

    match /adminUsers/{uid} {
      allow read: if request.auth.uid == uid;
    }

    match /roles/{roleId} {
      allow read: if isAdmin();
    }

    match /auditLogs/{logId} {
      allow read: if isAdmin();
      allow write: if false; // Should be written from a trusted server environment
    }

    match /projectRegistry/{projectId} {
      allow read, write: if isAdmin();
    }

    match /jobs/{jobId} {
      allow read, write: if isAdmin();
    }

    match /jobRuns/{runId} {
      allow read, write: if isAdmin();
    }

    match /deadLetters/{letterId} {
      allow read, write: if isAdmin();
    }

    match /featureFlags/{key} {
      allow read, write: if isAdmin();
    }
  }
}
