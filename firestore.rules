rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuth() { return request.auth != null; }
    function getRole() { return request.auth.token.role; }
    function isAdmin() { return getRole() in ['admin', 'superadmin']; }
    function isSuperAdmin() { return getRole() == 'superadmin'; }

    // Admins can read/write their own user data (if any)
    match /users/{uid} {
      allow read, write: if isAuth() && request.auth.uid == uid;
    }

    // Tenants can only be read and written by admins.
    match /tenants/{tenantId} {
      allow read: if isAdmin();
      allow create, update: if isSuperAdmin();
      allow delete: if false; // Disallow deletion
    }

    // Audit logs are immutable. They can only be created (by functions) and read by admins.
    match /auditLogs/{logId} {
      allow read: if isAdmin();
      allow write: if false; // Must be written by a trusted backend (function)
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
