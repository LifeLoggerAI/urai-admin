{ pkgs, ... }:
{
  packages = [
    pkgs.git
    pkgs.nodejs_20
  ];

  env = {
    CI = "1";
    FRONTEND = "noninteractive";
    TMPDIR = "$HOME/.tmp";

    # Deterministic path order (user bins first)
    PATH = "$HOME/.local/bin:$HOME/.global_modules/bin:$HOME/.local/share/npm-global/bin:$HOME/.local/share/pnpm:$PATH";
    NPM_CONFIG_PREFIX = "$HOME/.local/share/npm-global";

    XDG_CACHE_HOME = "$HOME/.cache";
    XDG_DATA_HOME = "$HOME/.local/share";
  };
}
