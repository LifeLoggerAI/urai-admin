rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check for admin custom claim.
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.admin == true;
    }

    // Users collection: only admins or the user themselves can read. Admins can write.
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow write: if isAdmin();
    }

    // Audit events and admin actions: immutable, only admins can create.
    match /auditEvents/{eventId} {
      allow read: if isAdmin();
      allow create: if isAdmin();
      allow update, delete: if false;
    }

    match /adminActions/{actionId} {
      allow read: if isAdmin();
      allow create: if isAdmin();
      allow update, delete: if false;
    }

    // Feature flags, system health, jobs, and policy docs: only admins can read/write.
    match /featureFlags/{flagId} {
      allow read, write: if isAdmin();
    }

    match /systemHealth/{healthId} {
      allow read, write: if isAdmin();
    }

    match /jobs/{jobId} {
      allow read, write: if isAdmin();
    }

    match /policyDocs/{docId} {
      allow read, write: if isAdmin();
    }
  }
}